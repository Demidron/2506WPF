<Window x:Class="_2506WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2506WPF"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="400">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Label Content="Add Category"
               Style="{StaticResource baseFont}"
               Foreground="DarkCyan"
               Margin="10"
               FontSize="24"/>
        <TextBox x:Name="Category"
                 Style = "{StaticResource Font2}"/>
        <Button x:Name="addButton" Content="Add"
                Style="{StaticResource Font2}"
                Click="addButton_Click"
                Margin="20"/>
    </StackPanel>
</Window>
